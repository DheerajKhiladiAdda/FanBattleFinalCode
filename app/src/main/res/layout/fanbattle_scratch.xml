<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_fanbattle"
    android:layout_width="150dp"
    android:layout_height="140dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_5"
        android:background="@color/card_red">

        <ImageView
            android:id="@+id/iv_ludo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_120"
            android:contentDescription="@string/s3"
            android:src="@drawable/fanbattle_scr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_ludo"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:text="@string/fan_battle"
            android:textColor="@color/white"
            android:textSize="@dimen/text_10" />

    </RelativeLayout>
</RelativeLayout>