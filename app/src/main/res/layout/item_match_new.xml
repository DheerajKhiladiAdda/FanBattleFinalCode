<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_4sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
                android:id="@+id/mc_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_24sdp"
                app:cardElevation="@dimen/_8sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:text="Time: 07:30 pm"
                    android:textColor="#9B9B9B"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_date_new"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:textColor="#9B9B9B"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/mc_top"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding_5"
                android:paddingTop="@dimen/padding_10"
                android:paddingEnd="@dimen/padding_5"
                android:paddingBottom="@dimen/padding_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_one"
                        android:layout_width="@dimen/image_width"
                        android:layout_height="@dimen/image_height"
                        android:contentDescription="@string/team_code" />

                    <TextView
                        android:id="@+id/tv_team_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/padding_3"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/MatchDetailsLatoFontText"
                        android:visibility="visible"
                        app:drawableTint="@color/lighter_black" />
                       <RelativeLayout
                        android:layout_height="@dimen/_20sdp"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:visibility="visible"
                           android:background="@drawable/btn_bg_fb"
                        android:text="@string/help_vs">

                           <TextView
                               android:id="@+id/tv_win_up_to_prize"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_centerInParent="true"
                               android:fontFamily="@font/montserrat"
                               android:textColor="@color/white"
                               android:textSize="@dimen/_10ssp" />
                       </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_time_left"
                        style="@style/TeamNameLatoFontText"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:drawablePadding="@dimen/padding_3"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_two"
                        android:layout_width="@dimen/image_width"
                        android:layout_height="@dimen/image_height"
                        android:contentDescription="@string/team_code" />

                    <TextView
                        android:id="@+id/tv_team_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/padding_3"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
    <TextView
        android:id="@+id/tv_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_main"
        android:layout_centerHorizontal="true"
        android:background="@color/color_green"
        android:gravity="center"
        android:padding="@dimen/margin_5"
        android:textColor="@color/white"
        android:textSize="@dimen/text_9"
        android:visibility="gone" />
    </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

